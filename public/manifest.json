{
    "name": "Branch Name Generator",
    "description": "a simple extension that helps generate a branch name out of an Azure DevOps item, based on your preferences of branch name conventions",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "matches": [
            "https://dev.azure.com/*/_sprints/*"
        ],
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "clipboardRead",
        "clipboardWrite"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://dev.azure.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}